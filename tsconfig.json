{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "module": "esnext",
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "allowJs": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "paths": {
      "@aotter/aotterclam-ui-vue-core": ["packages/core/src"],
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
  ]
}